
<h1 class="text-center">Listing Posts</h1>


<article class="container-fluid">
    <% @posts.each do |post| %>
        <div class="row column post">
          <aside class="writerinfo col-lg-2 ">
              <%= link_to image_tag(post.avatar, size: "60"), user_path(post.user_id) %>
              <%= link_to "#{post.username}", user_path(post.user_id) %>
              <p><%= post.updated_at %></p>
          </aside>
          <section class="messagebloc col-lg-8">
        <h2 class="text-center"><%= link_to "#{post.title}", post %></h2>
        <p class="postcontent"><%= post.content %></p>
          </section>
          <div class="actionbloc col-lg-1 ">

          <%= link_to 'Show', post %>
          <% if post.user_id == current_user.id || current_user.role == 1%>
          <%= link_to 'Edit', edit_post_path(post) %>
          <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <%end%>
          </div>
        </div>
    <% end %>
  </article>

<br>

<%= link_to 'New Post', new_post_path , class:'btn btn-primary btn-new', role:'button' %>
